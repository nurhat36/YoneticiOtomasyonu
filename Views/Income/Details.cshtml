@model YoneticiOtomasyonu.Models.Income

@{
    Layout = "_ManagementLayout";

    ViewData["Title"] = "Gelir Detay";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="display-6 fw-bold text-primary">Gelir Detayı</h1>
                <div>
                    <a asp-action="Edit" asp-route-buildingId="@ViewBag.BuildingId" asp-route-id="@Model.Id"
                       class="btn btn-sm btn-warning" title="Düzenle">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Listeye Dön
                    </a>
                </div>
            </div>
            <hr class="mt-2 mb-4" />
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0"><i class="fas fa-receipt me-2"></i> Gelir Bilgileri</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="detail-item">
                                <span class="detail-label">Tür</span>
                                <span class="detail-value">@Model.Type</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-item">
                                <span class="detail-label">Miktar</span>
                                <span class="detail-value text-success fw-bold">@Model.Amount.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-item">
                                <span class="detail-label">Tarih</span>
                                <span class="detail-value">@Model.Date.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-item">
                                <span class="detail-label">Ödeme Yöntemi</span>
                                <span class="detail-value">@Model.PaymentMethod</span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="detail-item">
                                <span class="detail-label">Açıklama</span>
                                <span class="detail-value">@(string.IsNullOrEmpty(Model.Description) ? "Açıklama yok" : Model.Description)</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white py-3">
                    <h5 class="mb-0"><i class="fas fa-building me-2"></i> Konum Bilgileri</h5>
                </div>
                <div class="card-body">
                    <div class="detail-item">
                        <span class="detail-label">Bina</span>
                        <span class="detail-value">@(Model.Building?.Name ?? "Belirtilmemiş")</span>
                    </div>
                    <div class="detail-item mt-3">
                        <span class="detail-label">Birim</span>
                        <span class="detail-value">@(Model.Unit?.Number ?? "Belirtilmemiş")</span>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-purple text-white py-3">
                    <h5 class="mb-0"><i class="fas fa-users me-2"></i> Kullanıcı Bilgileri</h5>
                </div>
                <div class="card-body">
                    <div class="detail-item">
                        <span class="detail-label">Ödeyen</span>
                        <span class="detail-value">@(Model.Payer?.UserName ?? "Belirtilmemiş")</span>
                    </div>
                    <div class="detail-item mt-3">
                        <span class="detail-label">Kaydeden</span>
                        <span class="detail-value">@Model.RecordedBy?.UserName</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border: none;
            border-radius: 10px;
            transition: transform 0.2s;
        }

            .card:hover {
                transform: translateY(-2px);
            }

        .card-header {
            border-radius: 10px 10px 0 0 !important;
        }

        .bg-purple {
            background-color: #6f42c1;
        }

        .detail-item {
            display: flex;
            flex-direction: column;
        }

        .detail-label {
            font-size: 0.85rem;
            color: #6c757d;
            font-weight: 500;
        }

        .detail-value {
            font-size: 1rem;
            color: #212529;
            font-weight: 600;
            word-break: break-word;
        }

        hr {
            opacity: 0.1;
        }

        .btn-outline-secondary {
            border-color: #dee2e6;
        }

            .btn-outline-secondary:hover {
                background-color: #f8f9fa;
            }
    </style>
}

@section Scripts {
    <!-- Font Awesome ikonları için -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
}