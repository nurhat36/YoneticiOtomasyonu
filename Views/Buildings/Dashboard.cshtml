@{
    ViewData["Title"] = "Bina Yönetim Paneli";
    Layout = "_ManagementLayout"; // kendi layout'un varsa buraya yaz
}

@section Styles {
    <style>
        .dashboard-card {
            transition: transform 0.2s ease;
        }

            .dashboard-card:hover {
                transform: translateY(-5px);
            }
    </style>
}

<div class="container py-4">

    <h2 class="mb-4">Bina Yönetim Paneli</h2>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm dashboard-card">
                <div class="card-body text-center">
                    <i class="bi bi-people-fill display-4 text-primary"></i>
                    <h5 class="mt-3">Birimler</h5>
                    <p>Bina birimlerini görüntüle ve yönet.</p>
                    <a asp-action="List" asp-controller="Units" asp-route-buildingId="@ViewBag.BuildingId" class="btn btn-outline-primary">Git</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm dashboard-card">
                <div class="card-body text-center">
                    <i class="bi bi-cash-stack display-4 text-success"></i>
                    <h5 class="mt-3">Gelirler</h5>
                    <p>Gelir kayıtlarını takip et.</p>
                    <a asp-action="Index" asp-controller="Income" asp-route-buildingId="@ViewBag.BuildingId" class="btn btn-outline-success">Git</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm dashboard-card">
                <div class="card-body text-center">
                    <i class="bi bi-cash-coin display-4 text-danger"></i>
                    <h5 class="mt-3">Giderler</h5>
                    <p>Gider işlemlerini kontrol et.</p>
                    <a asp-action="Index" asp-controller="Expense" asp-route-buildingId="@ViewBag.BuildingId" class="btn btn-outline-danger">Git</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm dashboard-card">
                <div class="card-body text-center">
                    <i class="bi bi-exclamation-triangle display-4 text-warning"></i>
                    <h5 class="mt-3">Şikayetler</h5>
                    <p>Gelen şikayetleri yönet.</p>
                    <a asp-action="Index" asp-controller="Complaint" asp-route-buildingId="@ViewBag.BuildingId" class="btn btn-outline-warning">Git</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm dashboard-card">
                <div class="card-body text-center">
                    <i class="bi bi-receipt display-4 text-info"></i>
                    <h5 class="mt-3">Aidatlar</h5>
                    <p>Aidat ayarlarını düzenle.</p>
                    <a asp-action="Index" asp-controller="DuesSettings" asp-route-buildingId="@ViewBag.BuildingId" class="btn btn-outline-info">Git</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm dashboard-card">
                <div class="card-body text-center">
                    <i class="bi bi-megaphone display-4 text-secondary"></i>
                    <h5 class="mt-3">Duyurular</h5>
                    <p>Bina duyurularını yönet.</p>
                    <a asp-action="Index" asp-controller="Announcement" asp-route-buildingId="@ViewBag.BuildingId" class="btn btn-outline-secondary">Git</a>
                </div>
            </div>
        </div>
    </div>
</div>
