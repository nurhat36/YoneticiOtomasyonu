@model IEnumerable<YoneticiOtomasyonu.Models.ViewModels.BuildingWithRoleViewModel>

    @{
    ViewData["Title"] = "Bina Yönetimi";
    Layout = "_Layout";
    }

    <div class="container-xxl">
        <div class="d-flex align-items-center justify-content-between mb-5">
            <div>
                <h1 class="fw-bold text-gradient">Bina Yönetimi</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Yönetim</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Binalar</li>
                    </ol>
                </nav>
            </div>
            <div class="d-flex gap-2">
                <a asp-action="Create" class="btn btn-primary d-flex align-items-center gap-2">
                    <i class="bi bi-plus-lg"></i> Yeni Bina Ekle
                </a>
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-funnel"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#">Tümü</a></li>
                        <li><a class="dropdown-item" href="#">Apartmanlar</a></li>
                        <li><a class="dropdown-item" href="#">Siteler</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#">Yöneticisi Olduklarým</a></li>
                    </ul>
                </div>
            </div>
        </div>

        @if (!Model.Any())
    {
        <div class="empty-state text-center py-5">
            <div class="empty-state-icon">
                <i class="bi bi-building fs-1 text-muted"></i>
            </div>
            <h3 class="mt-3 fw-semibold">Henüz bina eklenmemiþ</h3>
            <p class="text-muted mb-4">Yönetimini üstlendiðiniz binalarý sisteme ekleyerek baþlayabilirsiniz</p>
            <a asp-action="Create" class="btn btn-primary px-4">
                <i class="bi bi-plus-lg me-2"></i> Yeni Bina Ekle
            </a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
            <div class="col-xl-4 col-lg-6 col-md-6">
                <div class="card building-card h-100 border-0 shadow-hover">
                    <div class="card-img-container position-relative">
                        @if (!string.IsNullOrEmpty(item.Building.ImageUrl))
                            {
                        <img src="@item.Building.ImageUrl" class="card-img-top" alt="@item.Building.Name">
                            }
                            else
                            {
                        <div class="card-img-top bg-gradient-primary d-flex align-items-center justify-content-center">
                            <i class="bi bi-building fs-1 text-white"></i>
                        </div>
                            }
                        <div class="position-absolute top-0 end-0 m-3">
                            <span class="badge rounded-pill
                                    @(item.Role == "Yönetici" ? "bg-success" :
                                      item.Role == "Kiracý" ? "bg-primary" :
                                      item.Role == "Görevli" ? "bg-info" : "bg-secondary")">
                                @item.Role
                            </span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h3 class="h5 mb-1 fw-semibold">
                                    @item.Building.Name
                                    @if (!string.IsNullOrEmpty(item.Building.Block))
                                        {
                                    <span class="text-muted fs-6">(@item.Building.Block)</span>
                                        }
                                </h3>
                                <div class="text-muted small">
                                    <i class="bi bi-geo-alt-fill me-1"></i> @item.Building.Address
                                </div>
                            </div>
                            <span class="badge
                                    @(item.Building.Type == "Apartman" ? "bg-primary-subtle text-primary" :
                                      item.Building.Type == "Site" ? "bg-success-subtle text-success" :
                                      item.Building.Type == "Ýþ Merkezi" ? "bg-info-subtle text-info" :
                                      item.Building.Type == "Rezidans" ? "bg-warning-subtle text-warning" : "bg-secondary-subtle text-secondary")">
                                @item.Building.Type
                            </span>
                        </div>

                        <div class="building-stats d-flex justify-content-between border-top pt-3 mt-3">
                            <div class="text-center">
                                <div class="stat-value fw-bold">@item.Building.FloorCount</div>
                                <div class="stat-label text-muted small">Kat</div>
                            </div>
                            <div class="text-center">
                                <div class="stat-value fw-bold">@item.Building.UnitCount</div>
                                <div class="stat-label text-muted small">Birim</div>
                            </div>
                            <div class="text-center">
                                <div class="stat-value fw-bold">@item.Building.CreatedAt.ToString("dd/MM/yyyy")</div>
                                <div class="stat-label text-muted small">Oluþturulma</div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-top-0 pt-0 pb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Details" asp-route-id="@item.Building.Id" class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                Detaylarý Gör
                            </a>

                            <div class="dropdown">
                                <button class="btn btn-sm btn-icon rounded-circle" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-three-dots-vertical"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                                    @if (item.Role == "Yönetici" || User.IsInRole("SuperAdmin"))
                                        {
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center gap-2" asp-action="Edit" asp-route-id="@item.Building.Id">
                                            <i class="bi bi-pencil"></i> Düzenle
                                        </a>
                                    </li>
                                        }

                                    <li>
                                        <a class="dropdown-item d-flex align-items-center gap-2" asp-action="List" asp-controller="Units" asp-route-buildingId="@item.Building.Id">
                                            <i class="bi bi-door-open"></i> Birimler
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center gap-2" asp-action="Index" asp-controller="Income" asp-route-buildingId="@item.Building.Id">
                                            <i class="bi bi-cash-stack"></i> Gelirler
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center gap-2" asp-action="Index" asp-controller="Expense" asp-route-buildingId="@item.Building.Id">
                                            <i class="bi bi-cash-coin"></i> Giderler
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center gap-2" asp-action="Index" asp-controller="Complaint" asp-route-buildingId="@item.Building.Id">
                                            <i class="bi bi-exclamation-triangle"></i> Þikayetler
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center gap-2" asp-action="Index" asp-controller="DuesSettings" asp-route-buildingId="@item.Building.Id">
                                            <i class="bi bi-receipt"></i> Aidat Ayarlarý
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center gap-2" asp-action="BuildingDues" asp-controller="DuesSettings" asp-route-buildingId="@item.Building.Id">
                                            <i class="bi bi-wallet2"></i> Aidat Ödemeleri
                                        </a>
                                    </li>
                                        <li>
                                            <a class="dropdown-item d-flex align-items-center gap-2"
                                               asp-action="Index"
                                               asp-controller="Announcement"
                                               asp-route-buildingId="@item.Building.Id">
                                                <i class="bi bi-megaphone"></i> Bina Duyurularý
                                            </a>
                                        </li>


                                    @if (item.Role == "Yönetici" || User.IsInRole("SuperAdmin"))
                                        {
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center gap-2 text-danger" asp-action="Delete" asp-route-id="@item.Building.Id">
                                            <i class="bi bi-trash"></i> Sil
                                        </a>
                                    </li>
                                        }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            }
        </div>
    }
    </div>

    @section Styles {
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
        <style>
            :root {
                --primary-gradient: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
                --card-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
                --card-shadow-hover: 0 8px 30px rgba(0, 0, 0, 0.12);
            }

            .text-gradient {
                background: var(--primary-gradient);
                -webkit-background-clip: text;
                background-clip: text;
                color: transparent;
            }

            .building-card {
                transition: all 0.3s ease;
                border-radius: 12px;
                overflow: hidden;
                border: 1px solid rgba(0, 0, 0, 0.05);
            }

            .shadow-hover:hover {
                transform: translateY(-5px);
                box-shadow: var(--card-shadow-hover) !important;
            }

            .card-img-container {
                height: 200px;
                overflow: hidden;
            }

                .card-img-container img {
                    object-fit: cover;
                    width: 100%;
                    height: 100%;
                    transition: transform 0.5s ease;
                }

            .building-card:hover .card-img-container img {
                transform: scale(1.05);
            }

            .card-img-top.bg-gradient-primary {
                background: var(--primary-gradient);
                height: 200px;
            }

            .building-stats {
                font-size: 0.9rem;
            }

            .stat-value {
                font-weight: 700;
                color: #2575fc;
                font-size: 1.1rem;
            }

            .stat-label {
                color: #6c757d;
                font-size: 0.75rem;
                text-transform: uppercase;
                letter-spacing: 0.5px;
            }

            .btn-icon {
                width: 32px;
                height: 32px;
                display: flex;
                align-items: center;
                justify-content: center;
                border-radius: 50%;
                color: #6c757d;
                transition: all 0.2s;
                background-color: rgba(0, 0, 0, 0.03);
            }

                .btn-icon:hover {
                    background-color: rgba(0, 0, 0, 0.05);
                    color: #2575fc;
                }

            .empty-state {
                background-color: #f8fafc;
                border-radius: 16px;
                padding: 3rem;
                border: 1px dashed rgba(0, 0, 0, 0.1);
            }

            .empty-state-icon {
                width: 80px;
                height: 80px;
                display: flex;
                align-items: center;
                justify-content: center;
                background-color: rgba(0, 0, 0, 0.03);
                border-radius: 50%;
                margin: 0 auto 1.5rem;
            }
        </style>
    }

    @section Scripts {
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                // Kartlara týklanabilirlik özelliði
                document.querySelectorAll('.building-card').forEach(card => {
                    card.addEventListener('click', function (e) {
                        if (!e.target.closest('.dropdown, .btn, a')) {
                            const detailsLink = this.querySelector('a[href*="Details"]');
                            if (detailsLink) {
                                window.location.href = detailsLink.href;
                            }
                        }
                    });

                    // Hover efekti için cursor pointer
                    card.style.cursor = 'pointer';
                });

                // Toast bildirimleri için
                const toastElList = document.querySelectorAll('.toast');
                const toastList = [...toastElList].map(toastEl => {
                    return new bootstrap.Toast(toastEl, { autohide: true });
                });
                toastList.forEach(toast => toast.show());
            });
        </script>
    }
