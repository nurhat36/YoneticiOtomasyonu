@model YoneticiOtomasyonu.Models.ViewModels.BuildingPersonnelFormViewModel

@{
    ViewBag.Title = "Personel Düzenle";
    Layout = "_ManagementLayout";
}

<h2>Personel Düzenle</h2>

<form asp-action="Edit" asp-route-id="@Model.Personnel.Id" method="post">
    <input type="hidden" asp-for="Personnel.Id" />
    <input type="hidden" asp-for="Personnel.BuildingId" />

    <div class="mb-3">
        <label class="form-label fw-bold">Personel</label>
        <div class="d-flex align-items-center">
            <img src="@Model.Personnel.ApplicationUser.ProfileImageUrl"
                 alt="Profil" width="60" height="60" class="rounded-circle shadow-sm me-2" />
            <span class="fw-bold">@Model.Personnel.ApplicationUser.UserName (@Model.Personnel.ApplicationUser.Email)</span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Personnel.DutyType" class="form-label">Görev</label>
        <input asp-for="Personnel.DutyType" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Personnel.MonthlySalary" class="form-label">Maaş</label>
        <input asp-for="Personnel.MonthlySalary" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Personnel.Notes" class="form-label">Notlar</label>
        <textarea asp-for="Personnel.Notes" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a asp-action="Index" asp-route-buildingId="@ViewBag.BuildingId" asp-route-buildingId="@Model.Personnel.BuildingId" class="btn btn-secondary">Geri</a>
</form>
